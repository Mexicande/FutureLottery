<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_color_f4"
    android:layout_marginBottom="@dimen/length_1"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/session_tv"
            android:layout_width="0dp"
            android:layout_weight="64"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/color_666"
            android:textSize="@dimen/size_12"
            />
        <View
            android:layout_width="@dimen/length_1"
            android:layout_height="match_parent"
            android:background="@color/divider"/>
        <TextView
            android:id="@+id/vs_tv"
            android:layout_width="0dp"
            android:layout_weight="84"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/blue_ball"
            android:textSize="@dimen/size_12"
            />
        <View
            android:layout_width="@dimen/length_1"
            android:layout_height="match_parent"
            android:background="@color/divider"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="94"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/bet_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_666"
                android:textSize="@dimen/size_12"/>
            <ImageView
                android:id="@+id/bet_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/football_order_detail"
                android:visibility="gone"
                />

        </LinearLayout>
        <View
            android:layout_width="@dimen/length_1"
            android:layout_height="match_parent"
            android:background="@color/divider"/>
        <TextView
            android:id="@+id/caiguo_tv"
            android:layout_width="0dp"
            android:layout_weight="64"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/color_666"
            android:textSize="@dimen/size_12"
            />
    </LinearLayout>
</LinearLayout>
