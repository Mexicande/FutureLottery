<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/length_1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/head_iv"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginLeft="@dimen/length_15"
                android:layout_marginRight="@dimen/length_15"
                android:src="@mipmap/me_fragment_head2"/>
            <TextView
                android:id="@+id/nickname_tv"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:textColor="@color/color_666"
                android:textSize="@dimen/size_11"
                android:layout_marginTop="@dimen/length_5"
                android:gravity="center"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/size_18"
                    android:textColor="@color/red_ball"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/length_12"
                    android:layout_marginBottom="@dimen/length_12"
                    android:layout_marginRight="@dimen/length_25"
                    android:gravity="center"
                    >

                    <TextView
                        android:id="@+id/progress_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/red_ball"
                        android:textSize="21sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_999"
                        android:textSize="@dimen/size_11"
                        android:text="进度"/>
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="总金额（元）"
                        android:textSize="@dimen/size_11"
                        android:textColor="@color/color_999"/>
                    <TextView
                        android:id="@+id/total_mongey_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="@dimen/size_14"
                        android:textColor="@color/color_33"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/length_10"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="剩余金额（元）"
                        android:textSize="@dimen/size_11"
                        android:textColor="@color/color_999"/>
                    <TextView
                        android:id="@+id/balance_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="@dimen/size_14"
                        android:textColor="@color/color_33"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/length_10"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="跟单人数"
                        android:textSize="@dimen/size_11"
                        android:textColor="@color/color_999"/>
                    <TextView
                        android:id="@+id/count_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="@dimen/size_14"
                        android:textColor="@color/color_33"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/enter"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/length_20"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
