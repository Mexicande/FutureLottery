<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/white">

    <include layout="@layout/line_e1"/>
    <TextView
        android:id="@+id/bottom_result_clear_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@mipmap/bottom_result_delet"
        android:layout_marginLeft="@dimen/length_15"
        android:layout_centerVertical="true"
        android:text="清空"
        android:textColor="@color/text_color_32"
        android:textSize="@dimen/size_11"
        />
    <TextView
        android:id="@+id/bottom_result_choose_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/length_15"
        android:layout_centerVertical="true"
        android:text="机选"
        android:textColor="@color/red"
        android:textSize="@dimen/size_13"
        android:visibility="gone"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/bottom_result_count_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="@dimen/size_13"
            android:textColor="@color/black"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注 共"
            android:textSize="@dimen/size_13"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/bottom_result_money_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="@dimen/size_13"
            android:textColor="@color/red"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="元"
            android:textSize="@dimen/size_13"
            android:textColor="@color/black"
            />
    </LinearLayout>
    <Button
        android:id="@+id/bottom_result_next_btn"
        android:layout_width="61dp"
        android:layout_height="31dp"
        android:background="@drawable/login_button_bg"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/length_15"
        android:text="下一步"
        android:textColor="@color/white"
        android:textSize="@dimen/size_13"/>
</RelativeLayout>
