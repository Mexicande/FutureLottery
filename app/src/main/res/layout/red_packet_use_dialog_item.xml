<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginBottom="@dimen/length_1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:background="?android:attr/selectableItemBackground"
        >
        <ImageView
            android:id="@+id/logo_iv"
            android:layout_width="@dimen/length_30"
            android:layout_height="@dimen/length_30"
            android:layout_marginLeft="@dimen/size_15"
            android:layout_marginRight="@dimen/length_10"
            />
        <TextView
            android:id="@+id/name_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size_14"
            android:textColor="@color/text_color_32"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_15"
            android:layout_marginRight="@dimen/length_10"
            android:src="@mipmap/enter"
            />
    </LinearLayout>
</LinearLayout>
