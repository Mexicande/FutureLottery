<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <android.support.v7.widget.CardView
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        app:cardCornerRadius="5dp"
        app:cardBackgroundColor="#EAEAEA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_home"
                    android:textColor="@color/black"
                    android:text="罗马"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"
                    android:text="VS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_away"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"
                    android:text="巴萨"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <include layout="@layout/line_e1"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                >
                <LinearLayout
                    android:layout_width="@dimen/length_14"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_con"
                        android:text="0"
                        android:textColor="@color/color_ef"
                        android:gravity="center"
                        android:textSize="@dimen/size_9"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@color/color_999"/>
                    <TextView
                        android:id="@+id/tv_con1"
                        android:text="+1"
                        android:textColor="@color/color_ef"
                        android:gravity="center"
                        android:textSize="@dimen/size_9"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@color/red_ball"/>
                </LinearLayout>
                <LinearLayout
                    android:background="@drawable/white_bg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">
                        <TextView
                            android:id="@+id/tv_home_odds1"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/size_11"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:text="主胜1.35"/>
                        <View
                            android:layout_width="0.4dp"
                            android:layout_height="match_parent"
                            android:background="#EAEAEA"
                            />
                        <TextView
                            android:id="@+id/tv_equal_odds1"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/size_11"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:text="平1.35"/>
                        <View
                            android:layout_width="0.4dp"
                            android:layout_height="match_parent"
                            android:background="#EAEAEA"
                            />
                        <TextView
                            android:id="@+id/tv_customer_odds1"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/size_11"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:text="客胜1.35"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.4dp"
                        android:background="#EAEAEA"/>
                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">
                        <TextView
                            android:id="@+id/tv_home_odds2"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/size_11"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:text="主胜1.35"/>
                        <View
                            android:layout_width="0.4dp"
                            android:layout_height="match_parent"
                            android:background="#EAEAEA"
                            />
                        <TextView
                            android:id="@+id/tv_equal_odds2"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/size_11"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:text="平1.35"/>
                        <View
                            android:layout_width="0.4dp"
                            android:layout_height="match_parent"
                            android:background="#EAEAEA"
                            />
                        <TextView
                            android:id="@+id/tv_customer_odds2"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/size_11"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:text="客胜1.35"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:text="比分"
                    android:background="@color/color_orange"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="@dimen/size_9"
                    android:layout_width="@dimen/length_14"
                    android:layout_height="match_parent" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/one_recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </android.support.v7.widget.RecyclerView>

            </LinearLayout>
            <LinearLayout
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:text="总进球"
                    android:background="#1A83C7"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="@dimen/size_9"
                    android:layout_width="@dimen/length_14"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/all_balls_recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </android.support.v7.widget.RecyclerView>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:text="半全场"
                    android:background="#9A43FA"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="@dimen/size_9"
                    android:layout_width="@dimen/length_14"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/half_recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </android.support.v7.widget.RecyclerView>
                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.xinhe.haoyuncaipiao.view.supertextview.SuperButton
                    android:id="@+id/bt_cancel"
                    android:layout_width="wrap_content"
                    android:text="取消"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:textSize="15sp"
                    app:sCornersRadius="3dp"
                    app:sSolidColor="@color/white"
                    android:textColor="@color/black"
                    android:layout_height="30dp" />
                <com.xinhe.haoyuncaipiao.view.supertextview.SuperButton
                    android:id="@+id/bt_sure"
                    android:layout_toRightOf="@id/bt_cancel"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:text="确定"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    app:sCornersRadius="3dp"
                    app:sSolidColor="@color/red_ball"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:layout_height="30dp" />
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
