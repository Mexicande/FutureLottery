<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.com.futurelottery.ui.fragment.DoubleBallDuplexFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="胆码，选择1至5个号码"
                android:layout_marginLeft="@dimen/length_15"
                android:layout_marginTop="@dimen/length_20"
                android:textSize="@dimen/size_12"
                android:textColor="@color/color_666"/>
            <GridView
                android:id="@+id/danhao_red_gv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:numColumns="7"
                android:verticalSpacing="5dp"
                android:layout_marginTop="@dimen/length_14"
                android:layout_marginBottom="@dimen/length_15"
                >
            </GridView>

            <include layout="@layout/line_e1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="拖码，选择2至20个号码"
                android:layout_marginLeft="@dimen/length_15"
                android:layout_marginTop="@dimen/length_20"
                android:textSize="@dimen/size_12"
                android:textColor="@color/color_666"/>

            <GridView
                android:id="@+id/tuohao_red_gv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:horizontalSpacing="5dp"
                android:numColumns="7"
                android:verticalSpacing="5dp"
                android:layout_marginTop="@dimen/length_14"
                android:layout_marginBottom="@dimen/length_14">
            </GridView>

            <include layout="@layout/line_e1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="篮球，可选1至16个号码"
                android:layout_marginLeft="@dimen/length_15"
                android:layout_marginTop="@dimen/length_20"
                android:textSize="@dimen/size_12"
                android:textColor="@color/color_666"/>

            <GridView
                android:id="@+id/bule_gv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:horizontalSpacing="5dp"
                android:numColumns="7"
                android:verticalSpacing="5dp"
                android:layout_marginTop="@dimen/length_14"
                android:layout_marginBottom="@dimen/length_14">
            </GridView>

        </LinearLayout>
    </ScrollView>

    <include layout="@layout/bottom_result"/>

</LinearLayout>
