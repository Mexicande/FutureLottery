<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="cn.com.futurelottery.ui.fragment.DoubleBallDuplexFragment">
    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">
        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:id="@+id/appBar"
            android:background="@color/white"
            app:expanded="false"
            app:elevation="0dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"            android:layout_height="wrap_content">
            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/toolbar_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:fitsSystemWindows="true"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:background="@color/white_bg"
                        android:layout_width="match_parent"
                        android:layout_height="40dp">
                        <TextView
                            android:layout_marginLeft="53dp"
                            android:textColor="@color/color_333"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:textSize="13dp"
                            android:layout_height="wrap_content"
                            android:text="期号"/>
                        <TextView
                            android:textSize="13dp"
                            android:layout_marginRight="82dp"
                            android:layout_alignParentRight="true"
                            android:textColor="@color/color_333"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="开奖号码"/>
                    </RelativeLayout>
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </android.support.v7.widget.RecyclerView>
                </LinearLayout>
            </android.support.design.widget.CollapsingToolbarLayout>
            <include layout="@layout/line_e1"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp">
                <TextView
                    android:textColor="@color/color_333"
                    android:id="@+id/tv_award"
                    android:textSize="13dp"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="第2018033期"/>
                <TextView
                    android:id="@+id/limite_date"
                    android:textSize="13dp"
                    android:textColor="@color/red_ball"
                    android:layout_toRightOf="@id/tv_award"
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="第2018033期"/>
                <LinearLayout
                    android:id="@+id/layout_expand"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_expand"
                        android:textSize="13dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="20dp"
                        android:drawablePadding="5dp"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="下拉"/>
                    <ImageView
                        android:id="@+id/iv_expand"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/arrow_down"/>
                </LinearLayout>
            </RelativeLayout>
            <include layout="@layout/line_e1"/>
        </android.support.design.widget.AppBarLayout>
        <include layout="@layout/double_ball_duplex_layout"/>

    </android.support.design.widget.CoordinatorLayout>
    <include layout="@layout/bottom_result"/>

</LinearLayout>
