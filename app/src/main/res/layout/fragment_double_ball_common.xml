<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="cn.com.futurelottery.ui.fragment.DoubleBallCommonFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_14"
                >
                <ImageView
                    android:id="@+id/shake_choose_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/shake_choose"
                    android:layout_marginLeft="@dimen/length_13"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="至少选择6个红球，1个篮球"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/length_13"
                    android:textSize="@dimen/size_12"
                    android:textColor="@color/color_666"/>
            </RelativeLayout>
            <GridView
                android:id="@+id/doubleBall_red_gv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:numColumns="7"
                android:verticalSpacing="5dp"
                android:layout_marginTop="@dimen/length_14"
                android:layout_marginBottom="@dimen/length_15"
                >
            </GridView>

            <include layout="@layout/line_e1"/>

            <GridView
                android:id="@+id/doubleBall_blue_gv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:horizontalSpacing="5dp"
                android:numColumns="7"
                android:verticalSpacing="5dp"
                android:layout_marginTop="@dimen/length_15"
                android:layout_marginBottom="@dimen/length_15">
            </GridView>

        </LinearLayout>
    </ScrollView>

    <include layout="@layout/bottom_result"/>
</LinearLayout>
