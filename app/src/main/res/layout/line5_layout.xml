<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10">

            <ImageView
                android:id="@+id/shake_choose_iv"
                android:layout_width="67dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/length_13"
                android:background="@mipmap/shake_choose" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/length_13"
                android:text="每位至少选1个号，按位猜对开奖号100000元"
                android:textColor="@color/color_666"
                android:textSize="@dimen/size_12" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="42dp"
                android:layout_height="@dimen/length_20"
                android:background="@mipmap/line5_bg"
                android:text="万位"
                android:textColor="@color/white"
                android:textSize="@dimen/size_11"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/length_7"
                android:layout_marginTop="@dimen/length_23"
                android:layout_marginLeft="@dimen/length_15"
                />
            <GridView
                android:id="@+id/ten_thousand_gv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/length_15"
                android:layout_marginTop="@dimen/length_15"
                android:layout_marginRight="@dimen/length_10"
                android:layout_marginLeft="@dimen/length_10"
                android:gravity="center"
                android:numColumns="5"
                android:verticalSpacing="10dp"></GridView>
        </LinearLayout>


        <include layout="@layout/line_e1" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="42dp"
                android:layout_height="@dimen/length_20"
                android:background="@mipmap/line5_bg"
                android:text="千位"
                android:textColor="@color/white"
                android:textSize="@dimen/size_11"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/length_7"
                android:layout_marginTop="@dimen/length_23"
                android:layout_marginLeft="@dimen/length_15"
                />
            <GridView
                android:id="@+id/thousand_gv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/length_15"
                android:layout_marginTop="@dimen/length_15"
                android:layout_marginRight="@dimen/length_10"
                android:layout_marginLeft="@dimen/length_10"
                android:gravity="center"
                android:numColumns="5"
                android:verticalSpacing="10dp"></GridView>
        </LinearLayout>


        <include layout="@layout/line_e1" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="42dp"
                android:layout_height="@dimen/length_20"
                android:background="@mipmap/line5_bg"
                android:text="百位"
                android:textColor="@color/white"
                android:textSize="@dimen/size_11"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/length_7"
                android:layout_marginTop="@dimen/length_23"
                android:layout_marginLeft="@dimen/length_15"
                />
            <GridView
                android:id="@+id/hundred_gv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/length_15"
                android:layout_marginTop="@dimen/length_15"
                android:layout_marginRight="@dimen/length_10"
                android:layout_marginLeft="@dimen/length_10"
                android:gravity="center"
                android:numColumns="5"
                android:verticalSpacing="10dp"></GridView>
        </LinearLayout>


        <include layout="@layout/line_e1" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="42dp"
                android:layout_height="@dimen/length_20"
                android:background="@mipmap/line5_bg"
                android:text="十位"
                android:textColor="@color/white"
                android:textSize="@dimen/size_11"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/length_7"
                android:layout_marginTop="@dimen/length_23"
                android:layout_marginLeft="@dimen/length_15"
                />
            <GridView
                android:id="@+id/ten_gv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/length_15"
                android:layout_marginTop="@dimen/length_15"
                android:layout_marginRight="@dimen/length_10"
                android:layout_marginLeft="@dimen/length_10"
                android:gravity="center"
                android:numColumns="5"
                android:verticalSpacing="10dp"></GridView>
        </LinearLayout>
        <include layout="@layout/line_e1" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="42dp"
                android:layout_height="@dimen/length_20"
                android:background="@mipmap/line5_bg"
                android:text="个位"
                android:textColor="@color/white"
                android:textSize="@dimen/size_11"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/length_7"
                android:layout_marginTop="@dimen/length_23"
                android:layout_marginLeft="@dimen/length_15"
                />
            <GridView
                android:id="@+id/unit_gv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/length_15"
                android:layout_marginTop="@dimen/length_15"
                android:layout_marginRight="@dimen/length_10"
                android:layout_marginLeft="@dimen/length_10"
                android:gravity="center"
                android:numColumns="5"
                android:verticalSpacing="10dp"></GridView>
        </LinearLayout>


    </LinearLayout>
</android.support.v4.widget.NestedScrollView>