<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground">

    <ImageView
        android:id="@+id/payment_item_delet_iv"
        android:layout_width="@dimen/length_19"
        android:layout_height="@dimen/length_19"
        android:src="@mipmap/item_delet"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/length_10"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/payment_item_delet_iv"
        android:layout_toLeftOf="@+id/payment_item_enter_iv"
        android:layout_marginLeft="@dimen/length_10"
        android:layout_marginRight="@dimen/length_10"
        android:layout_marginTop="@dimen/length_13"
        android:layout_marginBottom="@dimen/length_13"
        >
        <TextView
            android:id="@+id/payment_item_balls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/red_ball"
            android:textSize="@dimen/size_15"/>
        <TextView
            android:id="@+id/payment_item_balls_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/red_ball"
            android:textSize="@dimen/size_12"
            android:layout_below="@+id/payment_item_balls"/>
    </RelativeLayout>
    <ImageView
        android:id="@+id/payment_item_enter_iv"
        android:layout_width="@dimen/length_6"
        android:layout_height="@dimen/length_11"
        android:src="@mipmap/lottery_enter"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/length_10"/>
</RelativeLayout>
