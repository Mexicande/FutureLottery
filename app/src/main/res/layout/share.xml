<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:orientation="vertical"
        android:background="@color/white"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分享到"
            android:textSize="@dimen/size_15"
            android:textColor="@color/text_color_32"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/length_18"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/length_20"
            >
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >
                <ImageView
                    android:id="@+id/weixin_friends_iv"
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:src="@mipmap/weixin2"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:id="@+id/weixin_friends_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="微信朋友圈"
                    android:textSize="@dimen/size_12"
                    android:textColor="@color/color_a9"
                    android:layout_below="@+id/weixin_friends_iv"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/length_10"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                >
                <ImageView
                    android:id="@+id/weixin_friend_iv"
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:src="@mipmap/weixin1"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:id="@+id/weixin_friend_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="微信"
                    android:textSize="@dimen/size_12"
                    android:textColor="@color/color_a9"
                    android:layout_below="@+id/weixin_friend_iv"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/length_10"
                    />
            </RelativeLayout>

        </LinearLayout>
        <TextView
            android:id="@+id/cancel"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/bg_color_f4"
            android:text="取消"
            android:gravity="center"
            android:textColor="@color/color_64"
            android:textSize="@dimen/size_15"/>
    </LinearLayout>
</RelativeLayout>
