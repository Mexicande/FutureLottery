<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="cn.com.futurelottery.ui.dialog.SizeBetDialogFragment">

   <android.support.v7.widget.CardView
       android:layout_marginRight="20dp"
       android:layout_marginLeft="20dp"
       app:cardCornerRadius="5dp"
       app:cardBackgroundColor="#EAEAEA"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <LinearLayout
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <LinearLayout
               android:layout_marginTop="20dp"
               android:layout_marginBottom="10dp"
               android:layout_gravity="center_horizontal"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">
               <TextView
                   android:id="@+id/tv_home"
                   android:textColor="@color/black"
                   android:text="罗马"
                   android:textSize="14sp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
               <TextView
                   android:textSize="14sp"
                   android:textColor="@color/black"
                   android:layout_marginLeft="10dp"
                   android:text="VS"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
               <TextView
                   android:id="@+id/tv_away"
                   android:textSize="14sp"
                   android:textColor="@color/black"
                   android:layout_marginLeft="10dp"
                   android:text="巴萨"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
           </LinearLayout>
           <include layout="@layout/line_e1"/>
           <TextView
               android:layout_marginTop="10dp"
               android:layout_marginLeft="10dp"
               android:textSize="11dp"
               android:textColor="@color/color_666"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="@string/score_90"/>

           <LinearLayout
               android:layout_marginRight="10dp"
               android:layout_marginLeft="10dp"
               android:layout_marginTop="10dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <TextView
                   android:text="@string/size_goals"
                   android:background="#1A83C7"
                   android:textColor="@color/white"
                   android:gravity="center"
                   android:ems="1"
                   android:textSize="11dp"
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent" />
               <android.support.v7.widget.RecyclerView
                   android:id="@+id/two_recyclerView"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
               </android.support.v7.widget.RecyclerView>
           </LinearLayout>


           <RelativeLayout
               android:layout_marginTop="20dp"
               android:gravity="center_horizontal"
               android:layout_marginBottom="20dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <cn.com.futurelottery.view.supertextview.SuperButton
                   android:id="@+id/bt_cancel"
                   android:layout_width="wrap_content"
                   android:text="取消"
                   android:paddingLeft="30dp"
                   android:paddingRight="30dp"
                   android:textSize="15sp"
                   app:sCornersRadius="3dp"
                   app:sSolidColor="@color/white"
                   android:textColor="@color/black"
                   android:layout_height="30dp" />
               <cn.com.futurelottery.view.supertextview.SuperButton
                   android:id="@+id/bt_sure"
                   android:layout_toRightOf="@id/bt_cancel"
                   android:layout_width="wrap_content"
                   android:layout_marginLeft="50dp"
                   android:text="确定"
                   android:paddingLeft="30dp"
                   android:paddingRight="30dp"
                   app:sCornersRadius="3dp"
                   app:sSolidColor="@color/red_ball"
                   android:textSize="15sp"
                   android:textColor="@color/white"
                   android:layout_height="30dp" />
           </RelativeLayout>
       </LinearLayout>
   </android.support.v7.widget.CardView>
</FrameLayout>
