<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="@dimen/length_1"
    android:background="@color/white"
    >
    <RelativeLayout
        android:id="@+id/superLotto_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/length_81"
        android:background="?android:attr/selectableItemBackground"
        >

        <RelativeLayout
            android:id="@+id/superLotto_rl1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/length_10"
            android:layout_marginTop="@dimen/length_10"
            >
            <TextView
                android:id="@+id/superLotto_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="大乐透"
                android:textSize="@dimen/size_15"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/superLotto_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="第2018032期 2018-03-21（周三）"
                android:textSize="@dimen/size_11"
                android:textColor="@color/text_color_99"
                android:layout_toRightOf="@+id/superLotto_name_tv"
                android:layout_marginLeft="@dimen/length_5"
                android:layout_centerVertical="true"
                android:lines="1"
                />
        </RelativeLayout>

        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/dlt_FlexboxLayout"
            android:layout_marginTop="12dp"
            android:layout_below="@+id/superLotto_rl1"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:flexWrap="wrap"
            app:alignItems="center"
            app:alignContent="flex_start"
            app:flexDirection="row"
            app:justifyContent="flex_start"
            >
        </com.google.android.flexbox.FlexboxLayout>
        <ImageView
            android:layout_width="@dimen/length_6"
            android:layout_height="@dimen/length_11"
            android:background="@mipmap/lottery_enter"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/length_10"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/footBall_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/length_81"
        android:background="?android:attr/selectableItemBackground"
        android:visibility="gone"
        >
        <RelativeLayout
            android:id="@+id/footBall_rl1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/length_10"
            android:layout_marginTop="@dimen/length_10"
            >
            <TextView
                android:id="@+id/footBall_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="竞彩足球"
                android:textSize="@dimen/size_15"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/footBall_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="比赛日：2018-03-21"
                android:textSize="@dimen/size_11"
                android:textColor="@color/text_color_99"
                android:layout_toRightOf="@+id/footBall_name_tv"
                android:layout_marginLeft="@dimen/length_5"
                android:layout_centerVertical="true"
                android:lines="1"
                />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/length_30"
            android:layout_below="@+id/footBall_rl1"
            android:layout_marginLeft="@dimen/length_10"
            android:layout_marginTop="@dimen/length_12"
            android:layout_marginRight="76dp"
            android:background="@drawable/lottery_fragment_football"
            android:gravity="center">

            <TextView
                android:id="@+id/footBall_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/size_12"
                android:textColor="@color/white"
                />
            <TextView
                android:id="@+id/footBall_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0:0"
                android:textSize="@dimen/size_12"
                android:textColor="@color/white"
                android:layout_marginRight="@dimen/length_15"
                android:layout_marginLeft="@dimen/length_15"
                />
            <TextView
                android:id="@+id/footBall_tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/size_12"
                android:textColor="@color/white"
                />
        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/length_30"
            android:layout_height="@dimen/length_30"
            android:layout_below="@+id/footBall_rl1"
            android:layout_marginLeft="@dimen/length_10"
            android:layout_marginTop="@dimen/length_12"
            android:background="@mipmap/lottery_fragment_football"/>
        <ImageView
            android:layout_width="@dimen/length_6"
            android:layout_height="@dimen/length_11"
            android:background="@mipmap/lottery_enter"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/length_10"/>
    </RelativeLayout>
</RelativeLayout>
