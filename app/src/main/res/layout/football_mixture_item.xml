<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="0.8dp"
    android:background="@color/white"
    android:orientation="horizontal"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginRight="10dp"
        android:id="@+id/date"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_name"
            android:layout_gravity="center_horizontal"
            android:textSize="13dp"
            android:textColor="@color/color_333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="欧冠"/>
        <TextView
            android:id="@+id/tv_week"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/color_333"
            android:textSize="13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="周二004"/>
        <TextView
            android:id="@+id/tv_endTime"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/color_333"
            android:textSize="13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="23:56截止"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/length_5"
            android:paddingBottom="@dimen/length_5"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_width="@dimen/length_14"
                android:layout_height="wrap_content"
                android:text="让球"
                android:gravity="center"
                android:textSize="@dimen/size_11"
                android:textColor="@color/color_33"/>
            <TextView
                android:id="@+id/team_name1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="曼城"
                android:gravity="center"
                android:textSize="@dimen/size_13"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VS"
                android:gravity="center"
                android:textSize="@dimen/size_13"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/team_name2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="曼城"
                android:gravity="center"
                android:textSize="@dimen/size_13"
                android:textColor="@color/black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            >
            <LinearLayout
                android:layout_width="@dimen/length_14"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_con"
                    android:text="0"
                    android:textColor="@color/color_ef"
                    android:gravity="center"
                    android:textSize="11dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@color/color_999"/>
                <TextView
                    android:id="@+id/tv_con1"
                    android:text="+1"
                    android:textColor="@color/color_ef"
                    android:gravity="center"
                    android:textSize="11dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@color/red_ball"/>
            </LinearLayout>
            <LinearLayout
                android:background="@drawable/bg_foot_layout"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <TextView
                        android:id="@+id/tv_home_odds1"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/size_11"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="主胜1.35"
                        android:clickable="true"/>
                    <View
                        android:layout_width="0.3dp"
                        android:layout_height="match_parent"
                        android:background="@color/divider"
                        />
                    <TextView
                        android:id="@+id/tv_equal_odds1"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/size_11"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="平1.35"/>
                    <View
                        android:layout_width="0.3dp"
                        android:layout_height="match_parent"
                        android:background="@color/divider"
                        />
                    <TextView
                        android:id="@+id/tv_customer_odds1"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/size_11"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="客胜1.35"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:background="@color/divider"/>
                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <TextView
                        android:id="@+id/tv_home_odds2"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/size_11"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="主胜1.35"/>
                    <View
                        android:layout_width="0.3dp"
                        android:layout_height="match_parent"
                        android:background="@color/divider"
                        />
                    <TextView
                        android:id="@+id/tv_equal_odds2"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/size_11"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="平1.35"/>
                    <View
                        android:layout_width="0.3dp"
                        android:layout_height="match_parent"
                        android:background="@color/divider"
                        />
                    <TextView
                        android:id="@+id/tv_customer_odds2"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/size_11"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="客胜1.35"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/unfold_tv"
                android:layout_width="@dimen/length_30"
                android:layout_height="match_parent"
                android:background="@drawable/bg_foot_layout"
                android:textSize="@dimen/size_12"
                android:textColor="@color/black"
                android:gravity="center"
                android:text="展开全部"
                android:layout_marginLeft="-0.3dp"
                android:layout_marginRight="@dimen/length_10"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>