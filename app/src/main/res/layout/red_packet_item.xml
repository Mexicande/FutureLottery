<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginBottom="@dimen/length_1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/length_15"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        >
        <RelativeLayout
            android:id="@+id/logo_iv"
            android:layout_width="74dp"
            android:layout_height="94dp"
            android:background="@mipmap/red_packet_usable"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                >
                <TextView
                    android:id="@+id/logo_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:text="0"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:text="元"
                    android:layout_toRightOf="@+id/logo_tv"
                    android:layout_alignBottom="@+id/logo_tv"
                    />
            </RelativeLayout>

        </RelativeLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/length_15"
            >
            <TextView
                android:id="@+id/money_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_16"
                android:textColor="@color/text_color_32"
                />
            <TextView
                android:id="@+id/time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_12"
                android:textColor="@color/red_ball"
                android:layout_marginTop="@dimen/length_5"
                />
            <TextView
                android:id="@+id/type_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_12"
                android:textColor="@color/color_a9"
                android:layout_marginTop="@dimen/length_5"
                />
            <TextView
                android:id="@+id/use_type_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_12"
                android:textColor="@color/color_a9"
                android:layout_marginTop="@dimen/length_5"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/use_tv"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:background="@drawable/un_red_check_bg"
            android:textColor="@color/red_ball"
            android:text="立即使用"
            android:gravity="center"
            android:textSize="@dimen/size_12"/>
    </LinearLayout>
</LinearLayout>
