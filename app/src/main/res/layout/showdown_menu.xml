<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <ImageView
        android:visibility="gone"
        android:id="@+id/iv_menu_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:contentDescription="@null"
        />
    <cn.com.futurelottery.view.supertextview.SuperButton
        android:id="@+id/super_bt"
        android:layout_width="wrap_content"
        app:sSolidColor="@color/white"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_gravity="center"
        app:sCornersRadius="3dp"
        android:text="标准选号"
        app:sStrokeWidth="1dp"
        app:sStrokeColor="@color/color_999"
        android:textSize="16sp"
        android:textColor="@color/color_999"
        android:layout_height="30dp" />

</LinearLayout>