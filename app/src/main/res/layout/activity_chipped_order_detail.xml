                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/length_15"
                            android:text="发起时间:"
                            android:textColor="@color/color_666"
                            android:textSize="@dimen/size_13" />

                        <TextView
                            android:id="@+id/start_time_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/length_5"
                            android:textColor="@color/color_666"
                            android:textSize="@dimen/size_13" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/length_20"
                        android:layout_marginTop="@dimen/length_5"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/length_15"
                            android:text="截止时间:"
                            android:textColor="@color/color_666"
                            android:textSize="@dimen/size_13" />

                        <TextView
                            android:id="@+id/finish_time_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/length_5"
                            android:textColor="@color/color_666"
                            android:textSize="@dimen/size_13" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/go_chipped_ll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/length_20"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/delet"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="删除订单"
                            android:textColor="@color/red_ball"
                            android:textSize="@dimen/size_13" />

                        <View
                            android:layout_width="55dp"
                            android:layout_height="@dimen/length_1"
                            android:layout_gravity="center_horizontal"
                            android:background="@color/red_ball" />

                    </LinearLayout>
                </LinearLayout>
            </android.support.v4.widget.NestedScrollView>


            <TextView
                android:id="@+id/go_chipped_tv"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/red_ball"
                android:gravity="center"
                android:text="去合买"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/pay_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/length_10"
                            android:text="剩余份数:"
                            android:textColor="@color/color_33"
                            android:textSize="@dimen/size_12" />

                        <TextView
                            android:id="@+id/left_count_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/red_ball"
                            android:textSize="@dimen/size_12" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(1元/份)"
                            android:textColor="@color/color_33"
                            android:textSize="@dimen/size_12" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/length_10"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <com.xinhe.haoyuncaipiao.view.AmountView
                            android:id="@+id/money_av"
                            android:layout_width="wrap_content"
                            android:layout_height="26dp"
                            android:layout_marginLeft="@dimen/length_3"
                            android:layout_marginRight="@dimen/length_3"
                            app:btnHight="25dp"
                            app:btnTextSize="13sp"
                            app:btnWidth="26dp"
                            app:tvWidth="50dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="元"
                            android:textColor="@color/black"
                            android:textSize="@dimen/size_14" />
                    </LinearLayout>
                </LinearLayout>

                <include layout="@layout/line_e1" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@color/white">

                    <TextView
                        android:id="@+id/all_tv"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:text="全包"
                        android:textColor="@color/red_ball"
                        android:textSize="@dimen/size_14" />

                    <View
                        android:layout_width="@dimen/length_1"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@+id/all_tv"
                        android:background="@color/bg_color_e1" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="共"
                            android:textColor="@color/black"
                            android:textSize="@dimen/size_13" />

                        <TextView
                            android:id="@+id/bottom_money_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/red"
                            android:textSize="@dimen/size_13" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="元"
                            android:textColor="@color/black"
                            android:textSize="@dimen/size_13" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/pay_btn"
                        android:layout_width="61dp"
                        android:layout_height="31dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/length_15"
                        android:background="@drawable/login_button_bg"
                        android:text="支付"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size_13" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
